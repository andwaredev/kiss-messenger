{
  "name": "kiss-messenger",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "start": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "yarn test:unit && yarn test:integration",
    "test:integration": "mocha -r ts-node/register 'test/integration/**/*.test.ts'",
    "test:integration:watch": "yarn test:integration --watch --watch-files src, test/integration/**/*",
    "test:unit": "mocha -r ts-node/register 'test/**/*.test.ts' --exclude 'test/integration/**/*'",
    "test:unit:watch": "yarn test:unit --watch --watch-files src, test/**/*.test.ts",
    "test:unit:coverage": "nyc yarn test:unit",
    "test:coverage": "yarn test:unit:coverage",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "eslint './**/*.ts'",
    "lint:prettier": "prettier --check './**/*.ts'",
    "db:migrate": "yarn db:migrate:run",
    "db:migrate:gen": "ts-node ./node_modules/.bin/typeorm migration:generate",
    "db:migrate:run": "ts-node ./node_modules/.bin/typeorm migration:run"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "date-fns": "^2.22.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "http-errors": "^1.8.0",
    "reflect-metadata": "^0.1.13",
    "sinon": "^11.1.1",
    "sqlite3": "^5.0.2",
    "supertest": "^6.1.3",
    "swagger-ui-express": "^4.1.6",
    "txtgen": "^2.2.8",
    "typeorm": "^0.2.34"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.21",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/http-errors": "^1.8.1",
    "@types/mocha": "^8.2.3",
    "@types/node": "^16.3.3",
    "@types/sinon": "^10.0.2",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "chai": "^4.3.4",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "mocha": "^9.0.2",
    "nyc": "^15.1.0",
    "prettier": "2.3.2",
    "source-map-support": "^0.5.19",
    "ts-node": "^10.1.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.5"
  }
}
